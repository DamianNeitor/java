package practicas_metodos;

import java.util.Scanner;

public class Metodos_Calculadora {
/////////////////////////////////////////////////////////////////

    public static Scanner entrada = new Scanner(System.in);
//////////////////////////////////////////////////////////////////////////

    public static String menu() {
        String[] arreglo = {"1)suma", "2)resta", "3)multiplicacion", "4)division"};
        for (int i = 0; i < arreglo.length; i++) {

            System.out.println(arreglo[i]);
        }
        return "la opcion escojida es:";
    }
    //////////////////  / /////////////////////////////////////////////////////////////////////////////

    public static int suma(int n2, int n4) {
        return n2 + n4;
    }
/////////////////////////////////////////////////////////////////////

    public static float dividir(float n2, float n4) {
        return n2 / n4;
    }
///////////////////////////////////////////////////////////////////////

    public static float multiplicar(float n2, float n4) {
        return n2 * n4;
    }
//////////////////////////////////////////////////////////////////////////

    public static int restar(int n2, int n4) {
        return n2 - n4;
    }
//////////////////////////////////////////////////////////////////////////

    public static String mostrar() {
        int opcion = 9;

///////////////////////////////////////////////////////////////////////////
        do {
            System.out.println("desea continuar aprete = 1 al 4 para continuar la operacion para salir = 0");
            opcion = entrada.nextInt();
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
            if (opcion > 0 && opcion < 5) {
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////                
                while (true) {
                    System.out.println(menu());
                    opcion = entrada.nextInt();
//////////////////////////////////////////////////////////////////////////////////////////
                    System.out.print("ingrese el primer digito = ");
                    int n2 = entrada.nextInt();
////////////////////////////////////////////////////////////////////////////////////////////                    
                    System.out.print("ingrese el primer digito = ");
                    int n4 = entrada.nextInt();
//////////////////////////////////////////////////////////////////////////////////////////////////////////                    
                    if (opcion == 1) {
                        System.out.println("resultado = " + suma(n2, n4));
                    }
////////////////////////////////////////////////////////////////////////////////////////////////////////                    
                    if (opcion == 2) {

                        System.out.println("resultado = " + restar(n2, n4));
                    }
/////////////////////////////////////////////////////////////////////////////////////////////////////////////                    
                    if (opcion == 3) {
                        System.out.println("resultado = " + multiplicar(n2, n4));
                    }
/////////////////////////////////////////////////////////////////////////////////////////////////////////////                    
                    if (opcion == 4) {
                        System.out.println("resultado = " + dividir(n2, n4));
                    }
                }
//////////////////////////////////////////////////////////////////////////////////////////////////////////////////
            } else {
                System.out.println("ingrese correctamente");

            }
////////////////////////////////////////////////////////////////////////////////////////////////////////////////            
        } while (opcion < 0 && opcion >= 5);
        return "estas erroneo";
//////////////////////////////////////////////////////////////
    }

    public static void main(String[] args) {
        mostrar();
    }
}
